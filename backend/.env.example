# Database
DATABASE_URL=sqlite+aiosqlite:///./fantasy_simulator.db
# For PostgreSQL (Railway):
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend URL (used for OAuth callback redirects)
FRONTEND_URL=http://localhost:5173

# Yahoo OAuth (optional — requires Yahoo Developer app registration)
# YAHOO_CLIENT_ID=
# YAHOO_CLIENT_SECRET=
# YAHOO_REDIRECT_URI=http://localhost:5173/dashboard

# CBS OAuth (optional — requires CBS Developer app registration)
# CBS_CLIENT_ID=
# CBS_CLIENT_SECRET=
# CBS_REDIRECT_URI=http://localhost:5173/dashboard

# Debug
SQL_ECHO=false
